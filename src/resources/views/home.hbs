<div class="mt-12" id="box-content">

 

  <div class="row" id="rows">

    {{#each courses}}
      <div class="col-sm-6 col-lg-3" id="course-item">

        <div class="card">
          <a href="/product/{{this.slug}}">
            {{!-- <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}"> --}}
            <img class="card-img-top image-show" src="{{this.image}}" alt="" />
          </a>
          <div class="card-body">
            <a href="/product/{{this.slug}}">
              <h5 class="card-title line-clamp" id="title">{{this.name}}</h5>
            </a>
            <p class="card-text line-clamp" id="desc">{{this.desc}}</p>
            <a href="/product/{{this.slug}}" class="btn btn-primary">Xem thÃªm</a>
          </div>
        </div>
