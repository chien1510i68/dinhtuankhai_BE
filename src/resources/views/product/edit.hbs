<div class="mt-4">
    <h2>Cập nhật sản phẩm</h2>
    <form method="POST" class="mt-4" action="/product/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên sản phẩm</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="desc">Mô tả</label>
            <textarea class="form-control" id="desc" name="desc">{{product.desc}}</textarea>
        </div>
        {{!-- <div class="form-group">
            <label for="videoID">VideoId</label>
            <input type="text" class="form-control" value="{{product.videoID}}" id="videoID" name="videoID">
        </div> --}}
         <div class="form-group">
            <label for="level">Hình ảnh </label>
            <input type="text" class="form-control" value="{{product.image}}" id="image" name="image">
        </div>
        <div class="form-group">
            <label for="level">Loại sản phẩm</label>
            <input type="text" class="form-control" value="{{product.level}}" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>